<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alimuzaffar.ramadanalarm" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SalaatTimesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetAlarmActivity"
            android:label="@string/title_activity_set_alarm"
            android:parentActivityName=".SalaatTimesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alimuzaffar.ramadanalarm.SalaatTimesActivity" />
        </activity>
        <activity
            android:name=".OnboardingActivity"
            android:label="@string/title_activity_onboarding" >
        </activity>
    </application>

</manifest>
